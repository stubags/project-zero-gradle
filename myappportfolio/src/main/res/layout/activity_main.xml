<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Nanodegree Apps"
            android:id="@+id/textView" android:layout_gravity="center_horizontal" android:layout_margin="10dp"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Popular Movies"
            android:id="@+id/popularMovies" android:layout_gravity="center_horizontal" android:layout_margin="10dp"
            android:background="#99bbaa"
            android:layout_below="@+id/textView"
            android:onClick="makeToast" />
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Stock Hawk"
            android:id="@+id/stockHawk" android:layout_gravity="center_horizontal" android:layout_margin="10dp"
            android:background="#99bbaa"
            android:layout_below="@+id/popularMovies"
            android:onClick="makeToast" />
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Build it bigger"
            android:id="@+id/buildItBigger" android:layout_gravity="center_horizontal" android:layout_margin="10dp"
            android:background="#99bbaa"
            android:layout_below="@+id/stockHawk"
            android:onClick="makeToast" />
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Make Your App Material"
            android:id="@+id/makeYourAppMaterial" android:layout_gravity="center_horizontal"
            android:layout_margin="10dp" android:background="#99bbaa"
            android:layout_below="@+id/buildItBigger"
            android:onClick="makeToast" />
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Go Ubiquitous"
            android:id="@+id/goUbiquitous" android:layout_gravity="center_horizontal" android:layout_margin="10dp"
            android:background="#99bbaa"
            android:layout_below="@+id/makeYourAppMaterial"
            android:onClick="makeToast" />
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Capstone"
            android:id="@+id/capstone" android:layout_gravity="center_horizontal" android:layout_margin="10dp"
            android:background="#99bbaa"
            android:layout_below="@+id/goUbiquitous"
            android:onClick="makeToast" />

</RelativeLayout>
